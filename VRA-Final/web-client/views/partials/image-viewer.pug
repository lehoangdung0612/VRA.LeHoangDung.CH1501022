- var dataSearchByAjax = searchByAjax.toString();

div#image-viewer
    img(src=imgPath)

form#search-frm(method="post", action= urlAction, data-ajax-search= dataSearchByAjax)
    div.input-group
        input#query.span1(type="hidden", name="q", value= imgFile)
        input#crop-x.span1(type="hidden", name="cx")
        input#crop-y.span1(type="hidden", name="cy")
        input#crop-w.span1(type="hidden", name="cw")
        input#crop-h.span1(type="hidden", name="ch")
    button#btn-submit(type="submit") Search